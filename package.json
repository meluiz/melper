{
  "name": "melper",
  "description": "Explore a versatile assortment of helper utility functions",
  "type": "module",
  "version": "0.1.1",
  "license": "MIT",
  "sideEffects": false,
  "author": {
    "name": "meluiz",
    "email": "me@meluiz.com",
    "url": "https://meluiz.com"
  },
  "main": "./dist/index.js",
  "source": "./src/index.ts",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/meluiz/melper",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meluiz/melper.git"
  },
  "bugs": {
    "url": "https://github.com/meluiz/melper/issues"
  },
  "packageManager": "bun@1.2.5",
  "keywords": [
    "melper",
    "melperjs",
    "melperts",
    "melper.ts",
    "melper.js",
    "melper-ts",
    "melper-js",
    "toolkit",
    "helper"
  ],
  "scripts": {
    "clean": "del dist",
    "build": "tsup",
    "test": "bun test",
    "test:coverage": "bun vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint --write",
    "check": "biome check --write",
    "format": "biome format --write",
    "prepublish": "bun run clean && bun run build"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./guard": {
      "types": "./dist/guard.d.ts",
      "import": "./dist/guard.js",
      "require": "./dist/guard.cjs"
    },
    "./number": {
      "types": "./dist/number.d.ts",
      "import": "./dist/number.js",
      "require": "./dist/number.cjs"
    },
    "./string": {
      "types": "./dist/string.d.ts",
      "import": "./dist/string.js",
      "require": "./dist/string.cjs"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.28.1",
    "@types/bun": "1.2.19",
    "@types/node": "24.1.0",
    "del-cli": "6.0.0",
    "tsup": "8.4.0",
    "typescript": "5.8.2"
  }
}
