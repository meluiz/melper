{
  "name": "melper",
  "description": "Explore a versatile assortment of strongly-typed helper utility functions",
  "version": "0.0.0",
  "license": "MIT",
  "author": {
    "name": "meluiz",
    "email": "me@meluiz.com",
    "url": "https://meluiz.com"
  },
  "source": "./src/index.ts",
  "module": "./dist/index.mjs",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "README.md",
    "LICENSE.txt",
    "package.json"
  ],
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.mjs",
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "keywords": [],
  "tags": [],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8"
  },
  "homepage": "https://github.com/meluiz/melper",
  "repository": {
    "type": "git",
    "url": "https://github.com/meluiz/melper"
  },
  "bugs": {
    "url": "https://github.com/meluiz/melper/issues"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "ci:publish": "pnpm build && changeset publish",
    "release": "changeset publish",
    "release:dev": "changeset version --snapshot dev && changeset publish --tag dev"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@vitest/ui": "^0.33.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "tsup": "^7.1.0",
    "vitest": "^0.33.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
