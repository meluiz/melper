{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "type": "es2020",
    "jsx": "preserve",
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  }
}
